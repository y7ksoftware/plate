{
    "name": "{name}",
    "description": "Y7K Project",
    "require": {
        "vlucas/phpdotenv": "^2.0"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php -r \"file_exists('.y7k-cli.yml') || copy('.y7k-cli.yml.example', '.y7k-cli.yml');\""
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
